<nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
    <a href="/"><h4 class="navbar-brand">네이버 최저가 검색</h4></a>
</nav>
    <div class="starter-template">
        <div class="container-head-title">
            <h1>순서</h1>
            <h6>파일선택 > 엑셀 업로드 > 최저가 조회 결과 확인 > 엑셀 다운로드</h6>
        </div>
        <hr>
        <div class="form-group">
            <input type="file" onchange="readExcel()">
            <button type="button" id="crawlingBtn">최저가 검색 시작</button>
            <button type="button" id="downloadBtn" disabled>엑셀 다운로드</button>
        </div>
        <hr>
        <div class="table-responsive">
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th>상품명</th>
                        <th>품번</th>
                        <th>판매가</th>
                        <th>최저가</th>
                        <th>판매 URL 바로가기</th>
                    </tr>
                </thead>
                <tbody id="resultDiv">

                </tbody>
            </table>
        </div>

    </div>
<script>

    let excelDate;

    $(document).ready(function (){
        $("#crawlingBtn").on("click", function (){

            if(excelDate == null || excelDate == undefined || excelDate == ""){
                alert("파일 선택 클릭 후 엑셀 데이터를 선택한 뒤 조회해 주세요. ");
                return;
            }

            $.ajax({
                url: "/api/doCrawling",
                method: "POST",
                data: excelDate,
                contentType:"application/json; charset=utf-8",
                dataType: "json",
                success: function (result){
                    let html = "";
                    if(result.length > 0){
                        $.each(result, function (index, elem){
                           html += "<tr>" +
                                       "<td>" +elem.name+ "</td>" +
                                       "<td>" +elem.productNumber1+ "</td>";
                           if(elem.salePrice != null && elem.salePrice != undefined){
                           html +=      "<td>" +elem.salePrice+ "</td>";
                           }else{
                           html +=      "<td> - </td>";
                           }
                            if(elem.lowerPrice != null && elem.lowerPrice != undefined){
                            html +=     "<td>" +elem.lowerPrice+ "</td>";
                            }else{
                            html +=     "<td> - </td>";
                            }
                            html +=     "<td><a href='"+elem.shopUrl+"'>바로가기</a></td>" +
                                   "</tr>"
                        });
                    }else{
                        html += "<tr><td colspan='5'>데이터를 조회할 수 없습니다.</td></tr>"
                    }
                    $("#resultDiv").html(html);
                },
                error: function (x,h,r){
                    console.log(x);
                }
            });
        }) ;
    });

    function readExcel() {
        let input = event.target;
        let reader = new FileReader();
        reader.onload = function () {
            let data = reader.result;
            let workBook = XLSX.read(data, { type: 'binary' });
            workBook.SheetNames.forEach(function (sheetName) {
                console.log('SheetName: ' + sheetName);
                let rows = XLSX.utils.sheet_to_json(workBook.Sheets[sheetName]);
                console.log(JSON.stringify(rows));
                console.log(rows);

                excelDate = JSON.stringify(rows);
            })
        };
        reader.readAsBinaryString(input.files[0]);
    }
</script>
